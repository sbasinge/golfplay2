# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Facilities page
GET     /facilities                 controllers.FacilityController.list
GET     /facilities/list            controllers.FacilityController.list
GET     /facilities/new             controllers.FacilityController.create
GET     /facilities/:id             controllers.FacilityController.edit(id: Long)
POST    /facilities                 controllers.FacilityController.save(messageType: String, id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
